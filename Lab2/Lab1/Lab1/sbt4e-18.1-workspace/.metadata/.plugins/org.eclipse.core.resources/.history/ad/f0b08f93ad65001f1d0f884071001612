#include <system.h>
#include <altera_avalon_pio_regs.h>
#include <stdio.h>
#include "SCC_Charts.h"

volatile int buttonChanged = 0;

int main(){
	TickData data;

	reset(&data);

	int buttonValue = 1;

	while(1)
	{
		// Fetch button inputs
		// A is Key 2, B is Key 1, R is Key 0
		// Remember that keys are active low

		buttonValue = IORD_ALTERA_AVALON_PIO_DATA(KEYS_BASE);
		if  (buttonValue == 1){
			data.R = 1;
			buttonChanged = 1;
		} else if (buttonValue == 2){
			data.B = 1;
			buttonChanged = 1;
		} else if (buttonValue == 3){
			data.A = 1;
			buttonChanged = 1;
		}

		// Do a tick!
		tick(&data);

		// Output O to Red LED
		if (data.O == 1){
			IOWR_ALTERA_AVALON_PIO_DATA(LEDS_GREEN_BASE, 0xFF);
			buttonChanged = 1;
		}

		printf("Button: %d || O value: %d\n", buttonValue, data.O);
	}

	return 0;
}
